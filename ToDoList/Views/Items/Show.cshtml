@{
  Layout = "_Layout";
}
<h1>To Do List Item Details: </h1>

<h2>@Model["item"].Description</h2>
<h3>Category: @Model["category"].Name</h3>

<form action='/categories/@Model["category"].Id/items/@Model["item"].Id' method="post">
  <button type="submit">Delete this Item!</button>
</form>

<a href='/categories/@Model["category"].Id/items/new'>Add another item</a><br>
<a href='/categories'>View all categories</a>
